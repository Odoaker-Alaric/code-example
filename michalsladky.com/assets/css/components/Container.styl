.Container
    margin 0 auto
    padding 0
    padding-left $content-padding-small
    padding-right $content-padding-small
    max-width $container-width
    position relative
    box-sizing content-box

    @media $xsmall-max
        padding-left $content-padding-xsmall
        padding-right $content-padding-xsmall

    @media $medium-up
        padding-left $content-padding-medium
        padding-right $content-padding-medium

    @media $large-up
        padding-left $content-padding-large
        padding-right $content-padding-large

    &--wide
        max-width $container-width-wide

    &--medium
        max-width $container-width-medium

    &--full
        max-width $container-width-full

    &--narrow
        max-width $container-width-narrow

    &--slim
        max-width $container-width-slim

    &.is-pure
        padding 0
        position static

        @media $medium-up
            padding 0

        @media $large-up
            padding 0

    &.is-pure-left
        padding-left 0
        position static

        @media $medium-up
            padding-left 0

        @media $large-up
            padding-left 0


    &.is-pure-right
        padding-left 0
        position static

        @media $medium-up
            padding-left 0

        @media $large-up
            padding-left 0
