html
    font-size 62.5%

    &.is-scrolling-disabled
        overflow hidden

body
    font-size 1.5rem
    line-height (30/15)
    font-family $font-bitter
    background '%s' % 'url(assets/frontend/img/source.gif)'
    background rgba($brown,.05)
    font-weight 500

    @media $large-up
        font-size 1.7rem

    .is-scrolling-disabled &
        overflow hidden
        position fixed
        top 0
        left 0
        width 100%
        height 100%

p
    margin-bottom (20/15em)

    &:last-child
        margin-bottom 0

a
    color inherit
    text-decoration underline

    &[href^=tel]
        text-decoration none
        color inherit

img
    max-width 100%
    height auto
    display block

img[data-src],
img[data-srcset]
    transition opacity .4s ease-out
    will-change opacity
    opacity 0

    &.is-lazy-loaded
        opacity 1

