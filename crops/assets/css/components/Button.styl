.Button
    background $green
    color #fff
    font-weight bold
    cursor pointer
    padding 5px 20px
    font-size 1.3rem
    border 1px solid $green

    &:hover
        background darken($green, 5)

    &--grey
        background $color3
        border-color $color3
        color #fff

        &:hover
            background $color2

    &--darkGrey
        background $color2
        border-color $color2
        color #fff

        &:hover
            background $color1

    &--red
        background $red
        border-color $red
        color #fff

        &:hover
            background darken($red, 5)

    &--small, &--invert:not(:hover)
        background none

    &--transparent
        background none
        border 0
        opacity .3

        &:hover
            background none
            color $red
            opacity 1

        &.Button--grey
            color $color3

        &.Button--red
            color $red

        &.Button--green
            color $green

    &--circle
        border-radius 50%

    &--icon
        width 30px
        height 30px
        display flex
        align-items center
        justify-content center
        padding 8px

        .Icon
            width 100%
            height 100%

    &--faded
        opacity .2

        &:hover
            opacity 1


    &--hasIcon
        .Icon
            height 10px
            width 10px
            margin-right 5px

    &:disabled
        opacity .8
        background $color5
        border-color $color5