$color8 = #E2E3E3
$color10 = #EFEBEB

$green = #6BAE3E
$red = #AB2624

$font-muli = 'Muli', sans-serif

$colors = {
    'green': $green,
    'red': $red,
    'color1': $color1
    'color2': $color2
    'color3': $color3
    'color4': $color4
    'color5': $color5
    'color6': $color6
    'color7': $color7
    'color8': $color8
    'color9': $color9
    'color10': $color10
}

$viewports = {
    xsmall:     {min: 0,  max: 359},
    small:     {min: 360,  max: 539},
    smallWide: {min: 540,  max: 767},
    medium:    {min: 768,  max: 1023},
    large:     {min: 1024, max: 1199},
    xlarge:    {min: 1200, max: 1399},
    xxlarge:   {min: 1400, max: 1919},
    xxxlarge:  {min: 1920}
}

// change to em values
for $type, $range in $viewports
    $boundaries = {}
    for $boundary, $value in $range
        $boundaries[$boundary] = $value/16em;
    $viewports[$type] = $boundaries;

$xsmall-up = 'screen and (min-width: ' + $viewports.xsmall.min + ')'
$xsmall-only = $xsmall-up + ' and (max-width: ' + $viewports.xsmall.max + ')'
$xsmall-max = 'screen and (max-width: ' + $viewports.xsmall.max + ')'

